<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Нажатое состояние -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFAAAA" /> <!-- Цвет фона при нажатии -->
            <corners android:radius="12dp" />  <!-- Скруглённые углы -->
        </shape>
    </item>

    <!-- Фокусированное состояние -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#AAAAFF" /> <!-- Цвет фона при фокусе -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Обычное состояние -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD" /> <!-- Цвет фона обычно -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>